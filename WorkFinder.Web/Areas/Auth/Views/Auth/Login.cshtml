@{
    ViewData["Title"] = "Login";
}

<div class="">
    <div class="row m-0">
        <div class="col-md-6 login-form">
            <div class="logo">
                <img src="~/icon/Logo.png" alt="" />
            </div>
            <div class="w-75 mx-auto mt-5 ">
                <h2 class="mb-4">Sign in</h2>
                <p class="text-muted mb-4">Don't have account? <a href="#" class="text-primary">Create Account</a></p>

                <form >
                    <div class="mb-3">
                        <input type="email" class="form-control" placeholder="Email address" required>
                    </div>
                    <div class="mb-3 position-relative">
                        <input type="password" class="form-control" placeholder="Password" required>
                        <span class="position-absolute top-50 end-0 translate-middle-y me-3">
                            <i class="far fa-eye"></i>
                        </span>
                    </div>

                    <div class="checkbox-container">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">Remember Me</label>
                        </div>
                        <a href="#" class="text-primary">Forgot password</a>
                    </div>

                    <button type="submit" class="login-button">
                        Sign In <i class="fas fa-arrow-right ms-2"></i>
                    </button>
                </form>

                <div class="text-center my-3">or</div>

                <div class="social-login">
                    <button class="social-button facebook-login">
                        <i class="fab fa-facebook-f me-2"></i> Sign in with Facebook
                    </button>
                    <button class="social-button google-login">
                        <i class="fab fa-google me-2"></i> Sign in with Google
                    </button>
                </div>
            </div>
        </div>

        <div class="col-md-6 right-panel">
            <div class="overlay"></div>
            <div class="content">
                <h3 class="mb-2">Over 1,75,324 candidates waiting for good employees.</h3>

                <div class="row ">
                    <div class="col-md-4 stat-box">
                        <div class="icon-container">
                            <i class="fas fa-briefcase"></i>
                        </div>
                        <h3>1,75,324</h3>
                        <p>Live Job</p>
                    </div>
                    <div class="col-md-4 stat-box">
                        <div class="icon-container">
                            <i class="fas fa-building"></i>
                        </div>
                        <h3>97,354</h3>
                        <p>Companies</p>
                    </div>
                    <div class="col-md-4 stat-box">
                        <div class="icon-container">
                            <i class="fas fa-briefcase"></i>
                        </div>
                        <h3>7,532</h3>
                        <p>New Jobs</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    
   .login-form {
       background-color: #ffffff;
       border-radius: 5px;
       padding: 2rem;
       font-size: 1.6rem;
       min-height: 100vh;
       overflow-y: auto;
   }
    .form-control {
        border-radius: 5px;
        padding: 10px;
        font-size: 1.6rem;
    }
 .right-panel {
     min-height: 100vh;
     display: flex;
     flex-direction: column;
     justify-content: end;
     position: relative;
     color: #fff;
     overflow-y: auto;
 }
    .right-panel .overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: url("@Url.Content("~/img/bg-auth.png")");
        background-repeat: no-repeat;
        background-size: cover;
        
        z-index: 0;
    }

    .right-panel .content {
        position: relative;
        bottom: 0;
        z-index: 1;
        padding: 30px;
    }

    

    .stat-box {
        text-align: center;
        padding: 20px;
        color: white;
    }

    .login-button {
        background-color: #0d6efd;
        color: white;
        border: none;
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        margin-top: 10px;
    }

    .social-login {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .social-button {
        flex: 1;
        padding: 10px;
        border: 1px solid #dee2e6;
        border-radius: 5px;
        text-align: center;
        margin: 0 5px;
        background-color: white;
    }

    .facebook-login {
        color: #3b5998;
    }

    .google-login {
        color: #db4437;
    }

    .checkbox-container {
        display: flex;
        justify-content: space-between;
        margin: 15px 0;
    }

