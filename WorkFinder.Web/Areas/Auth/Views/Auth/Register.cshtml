@model WorkFinder.Web.Areas.Auth.Models.RegisterViewModel
@{
    ViewData["Title"] = "Create Account";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WorkFinder</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        html,
        body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden;
            font-size: 62.5%;
        }

        .main-container {
            display: flex;
            height: 100vh;
        }

        .logo-container {
            position: absolute;
            top: 20px;
            left: 40px;
            z-index: 10;
        }

        .logo-img {
            height: 40px;
        }

        .register-column {
            width: 50%;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background-color: #fff;
            font-size: 1.4rem;
            overflow-y: auto;
        }

        .register-form-container {
            width: 75%;
            max-width: 450px;
            margin: 0 auto;
        }

        .right-column {
            width: 50%;
            position: relative;
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
        }

        .checkerboard {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: url("@Url.Content("~/img/bg-auth.png")");
            background-size: cover;
            background-position: center;
            z-index: 1;
        }

        .stats-container {
            position: relative;
            z-index: 2;
            color: white;
            width: 75%;
            margin-left: 12.5%;
            margin-bottom: 10%;
        }

        .stat-box {
            text-align: center;
            padding: 15px;
        }

        .icon-container {
            display: inline-flex;
            justify-content: center;
            align-items: center;
            width: 50px;
            height: 50px;
            background-color: rgba(255, 255, 255, 0.2);
            border-radius: 10px;
            margin-bottom: 10px;
            font-size: 2.2rem;
        }

        .right-column .stat-box h3 {
            font-size: 2.2rem;
            margin-bottom: 0.2rem;
            font-weight: 600;
        }

        .stat-box p {
            margin: 0;
            font-size: 1.4rem;
            color: rgba(255, 255, 255, 0.8);
        }

        .form-control {
            border-radius: 5px;
            padding: 10px 15px;
            font-size: 1.6rem;
            height: auto;
            border: 1px solid #ced4da;
        }

        .form-select {
            border-radius: 5px;
            padding: 10px 15px;
            font-size: 1.6rem;
            height: auto;
            border: 1px solid #ced4da;
        }

        .create-button {
            background-color: #0d6efd;
            color: white;
            border: none;
            width: 100%;
            padding: 12px;
            border-radius: 5px;
            margin-top: 10px;
            font-size: 1.6rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .social-login {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
            gap: 10px;
        }

        .social-button {
            flex: 1;
            padding: 10px;
            border: 1px solid #dee2e6;
            border-radius: 5px;
            text-align: center;
            background-color: white;
            font-size: 1.4rem;
            display: flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
        }

        .facebook-login {
            color: #3b5998;
        }

        .google-login {
            color: #db4437;
        }

        .form-check-input {
            width: 1.6rem;
            height: 1.6rem;
            margin-top: 0.25rem;
        }

        .form-check-label {
            padding-left: 0.5rem;
            font-size: 1.4rem;
        }

        h2 {
            font-size: 3.2rem;
            font-weight: 600;
        }

        .text-muted {
            font-size: 1.6rem;
        }

        .right-column h3 {
            font-size: 2.8rem;
            font-weight: 600;
            margin-bottom: 3rem;
        }

        @@media(max - width: 768px) {
                .main-container {
                    flex-direction: column;
                }

                .register-column {
                    width: 100%;
                    overflow-y: auto;
                }

                .right-column {
                    display: none;
                }

                .register-form-container {
                    width: 85%;
                    margin: 20px auto;
                }

                .social-login {
                    flex-direction: column;
                }

                .logo-container {
                    position: relative;
                    display: flex;
                    justify-content: center;
                    left: 0;
                    margin-top: 20px;
                    margin-bottom: 10px;
                }
            }
        </style>
    </head>

    <body>
        <div class="logo-container">
            <a href="/">
                <img src="~/icon/Logo.png" alt="MyJob" class="logo-img" />
            </a>
        </div>

        <div class="main-container">
            <div class="register-column">
                <div class="register-form-container">
                    <h2 class="mb-4">Create account.</h2>
                    <p class="text-muted mb-4">Already have account? <a href="/Auth/Login"
                            class="text-primary link-offset-2 link-underline link-underline-opacity-0">Log In</a></p>

                    <form asp-action="Register" asp-controller="Auth" method="post">
                        <div class="mb-4">
                            <div class="dropdown">
                                <input type="hidden" asp-for="Role" id="selectedRole" value="Employer" />
                                <button class="form-select form-select-lg text-start" type="button" id="userTypeDropdown"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    Employers
                                    <i class="fas fa-chevron-down float-end mt-1"></i>
                                </button>
                                <ul class="dropdown-menu w-100" aria-labelledby="userTypeDropdown">
                                    <li><a class="dropdown-item" href="#" data-value="Employer">Employers</a></li>
                                    <li><a class="dropdown-item" href="#" data-value="JobSeeker">Job Seekers</a></li>
                                </ul>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <input type="text" class="form-control" asp-for="FirstName" placeholder="First Name"
                                    required>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" asp-for="LastName" placeholder="Last Name" required>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <input type="email" class="form-control" asp-for="Email" placeholder="Email address" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3 position-relative">
                            <input type="password" class="form-control" asp-for="Password" placeholder="Password" required>
                            <span class="position-absolute top-50 end-0 translate-middle-y me-3" style="cursor: pointer;">
                                <i class="fas fa-eye" id="togglePassword"></i>
                            </span>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-4 position-relative">
                            <input type="password" class="form-control" asp-for="ConfirmPassword"
                                placeholder="Confirm Password" required>
                            <span class="position-absolute top-50 end-0 translate-middle-y me-3" style="cursor: pointer;">
                                <i class="fas fa-eye" id="toggleConfirmPassword"></i>
                            </span>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="AgreeTerms" id="agreeTerms"
                                    required>
                                <label class="form-check-label" for="agreeTerms">
                                    I've read and agree with your <a href="/terms"
                                        class="text-primary link-offset-2 link-underline link-underline-opacity-0">Terms of
                                        Services</a>
                                </label>
                                <span asp-validation-for="AgreeTerms" class="text-danger d-block"></span>
                            </div>
                        </div>

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <button type="submit" class="create-button">
                            Create Account <i class="fas fa-arrow-right ms-2"></i>
                        </button>
                    </form>

                    <div class="text-center my-3">or</div>

                    <div class="social-login">
                        <a href="/Account/ExternalLogin?provider=Facebook" class="social-button facebook-login">
                            <i class="fab fa-facebook-f me-2"></i> Sign up with Facebook
                        </a>
                        <a href="/Account/ExternalLogin?provider=Google" class="social-button google-login">
                            <i class="fab fa-google me-2"></i> Sign up with Google
                        </a>
                    </div>
                </div>
            </div>

            <div class="right-column">
                <div class="checkerboard"></div>
                <div class="stats-container">
                    <h3>Over 1,75,324 candidates <br /> waiting for good employees.</h3>
                    <div class="row">
                        <div class="col-md-4 stat-box">
                            <div class="icon-container">
                                <i class="fas fa-briefcase"></i>
                            </div>
                            <h3>1,75,324</h3>
                            <p>Live Job</p>
                        </div>
                        <div class="col-md-4 stat-box">
                            <div class="icon-container">
                                <i class="fas fa-building"></i>
                            </div>
                            <h3>97,354</h3>
                            <p>Companies</p>
                        </div>
                        <div class="col-md-4 stat-box">
                            <div class="icon-container">
                                <i class="fas fa-briefcase"></i>
                            </div>
                            <h3>7,532</h3>
                            <p>New Jobs</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                // Password visibility toggle
                const togglePassword = document.getElementById('togglePassword');
                const password = document.querySelector('input[asp-for="Password"]');

                togglePassword.addEventListener('click', function () {
                    const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                    password.setAttribute('type', type);
                    this.classList.toggle('fa-eye');
                    this.classList.toggle('fa-eye-slash');
                });

                // Confirm Password visibility toggle
                const toggleConfirmPassword = document.getElementById('toggleConfirmPassword');
                const confirmPassword = document.querySelector('input[asp-for="ConfirmPassword"]');

                toggleConfirmPassword.addEventListener('click', function () {
                    const type = confirmPassword.getAttribute('type') === 'password' ? 'text' : 'password';
                    confirmPassword.setAttribute('type', type);
                    this.classList.toggle('fa-eye');
                    this.classList.toggle('fa-eye-slash');
                });

                // Dropdown functionality
                const dropdownItems = document.querySelectorAll('.dropdown-item');
                const dropdownButton = document.getElementById('userTypeDropdown');
                const roleInput = document.getElementById('selectedRole');

                dropdownItems.forEach(item => {
                    item.addEventListener('click', function (e) {
                        e.preventDefault();
                        const value = this.getAttribute('data-value');
                        const text = this.textContent;
                        dropdownButton.textContent = text;
                        roleInput.value = value;
                        dropdownButton.innerHTML = text + '<i class="fas fa-chevron-down float-end mt-1"></i>';
                    });
                });
            });
        </script>
    </body>

    </html>