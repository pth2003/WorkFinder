@model WorkFinder.Web.Areas.Employer.Models.JobPostViewModel
@{
    ViewData["Title"] = "Post a Job";
    Layout = "_EmployerLayout";
}

<div class="container-fluid px-4">
    <div class="employers-dashboard mt-4">
        @await Html.PartialAsync("~/Areas/Employer/Views/Shared/_SidebarPartial.cshtml")


        <div class="main-content">
            <div class="post-job-container bg-white p-5 rounded shadow">
                <h2 class="mb-5 fs-1 fw-bold">Post a Job</h2>

                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                    <div class="mb-5">
                        <label asp-for="Title" class="form-label fw-medium fs-4">Job Title</label>
                        <input asp-for="Title" class="form-control form-control-lg"
                            placeholder="Add job title, role, vacancies etc" />
                        <span asp-validation-for="Title" class="text-danger fs-5 mt-2"></span>
                    </div>

                    <div class="row mb-5">
                        <div class="col-md-6 pe-md-4">
                            <label asp-for="Tags" class="form-label fw-medium fs-4">Tags</label>
                            <input asp-for="Tags" class="form-control form-control-lg"
                                placeholder="Job keyword, tags etc..." />
                            <span asp-validation-for="Tags" class="text-danger fs-5 mt-2"></span>
                        </div>
                        <div class="col-md-6 ps-md-4">
                            <label asp-for="JobRole" class="form-label fw-medium fs-4">Job Role</label>
                            <select asp-for="JobRole" class="form-select form-select-lg">
                                <option value="">Select...</option>
                                <option value="Developer">Developer</option>
                                <option value="Designer">Designer</option>
                                <option value="Manager">Manager</option>
                                <option value="Marketing">Marketing</option>
                                <option value="Sales">Sales</option>
                            </select>
                            <span asp-validation-for="JobRole" class="text-danger fs-5 mt-2"></span>
                        </div>
                    </div>

                    <h4 class="mt-5 mb-4 fs-1 fw-bold">Salary</h4>
                    <div class="row mb-5">
                        <div class="col-md-4 pe-md-4">
                            <label asp-for="MinSalary" class="form-label fw-medium fs-4">Min Salary</label>
                            <div class="input-group">
                                <input asp-for="MinSalary" class="form-control form-control-lg"
                                    placeholder="Minimum salary..." />
                                <span class="input-group-text">USD</span>
                            </div>
                            <span asp-validation-for="MinSalary" class="text-danger fs-5 mt-2"></span>
                        </div>
                        <div class="col-md-4 px-md-4">
                            <label asp-for="MaxSalary" class="form-label fw-medium fs-4">Max Salary</label>
                            <div class="input-group">
                                <input asp-for="MaxSalary" class="form-control form-control-lg"
                                    placeholder="Maximum salary..." />
                                <span class="input-group-text">USD</span>
                            </div>
                            <span asp-validation-for="MaxSalary" class="text-danger fs-5 mt-2"></span>
                        </div>
                        <div class="col-md-4 ps-md-4">
                            <label asp-for="SalaryType" class="form-label fw-medium fs-4">Salary Type</label>
                            <select asp-for="SalaryType" class="form-select form-select-lg">
                                <option value="">Select...</option>
                                <option value="Hourly">Hourly</option>
                                <option value="Monthly">Monthly</option>
                                <option value="Yearly">Yearly</option>
                            </select>
                            <span asp-validation-for="SalaryType" class="text-danger fs-5 mt-2"></span>
                        </div>
                    </div>

                    <h4 class="mt-5 mb-4 fs-1 fw-bold">Advance Information</h4>
                    <div class="row mb-5">
                        <div class="col-md-4 pe-md-4">
                            <label asp-for="Education" class="form-label fw-medium fs-4">Education</label>
                            <select asp-for="Education" class="form-select form-select-lg">
                                <option value="">Select...</option>
                                <option value="High School">High School</option>
                                <option value="Associate Degree">Associate Degree</option>
                                <option value="Bachelor's Degree">Bachelor's Degree</option>
                                <option value="Master's Degree">Master's Degree</option>
                                <option value="Doctorate">Doctorate</option>
                            </select>
                            <span asp-validation-for="Education" class="text-danger fs-5 mt-2"></span>
                        </div>
                        <div class="col-md-4 px-md-4">
                            <label asp-for="Experience" class="form-label fw-medium fs-4">Experience</label>
                            <select asp-for="Experience" class="form-select form-select-lg">
                                <option value="">Select...</option>
                                <option value="Entry Level">Entry Level</option>
                                <option value="1-3 Years">1-3 Years</option>
                                <option value="3-5 Years">3-5 Years</option>
                                <option value="5-10 Years">5-10 Years</option>
                                <option value="10+ Years">10+ Years</option>
                            </select>
                            <span asp-validation-for="Experience" class="text-danger fs-5 mt-2"></span>
                        </div>
                        <div class="col-md-4 ps-md-4">
                            <label asp-for="JobType" class="form-label fw-medium fs-4">Job Type</label>
                            <select asp-for="JobType" class="form-select form-select-lg">
                                <option value="">Select...</option>
                                <option value="Full Time">Full Time</option>
                                <option value="Part Time">Part Time</option>
                                <option value="Contract">Contract</option>
                                <option value="Internship">Internship</option>
                                <option value="Freelance">Freelance</option>
                            </select>
                            <span asp-validation-for="JobType" class="text-danger fs-5 mt-2"></span>
                        </div>
                    </div>

                    <div class="row mb-5">
                        <div class="col-md-4 pe-md-4">
                            <label asp-for="Vacancies" class="form-label fw-medium fs-4">Vacancies</label>
                            <select asp-for="Vacancies" class="form-select form-select-lg">
                                <option value="">Select...</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10+</option>
                            </select>
                            <span asp-validation-for="Vacancies" class="text-danger fs-5 mt-2"></span>
                        </div>
                        <div class="col-md-4 px-md-4">
                            <label asp-for="ExpirationDate" class="form-label fw-medium fs-4">Expiration Date</label>
                            <input asp-for="ExpirationDate" class="form-control form-control-lg"
                                placeholder="DD/MM/YYYY" />
                            <span asp-validation-for="ExpirationDate" class="text-danger fs-5 mt-2"></span>
                        </div>
                        <div class="col-md-4 ps-md-4">
                            <label asp-for="JobLevel" class="form-label fw-medium fs-4">Job Level</label>
                            <select asp-for="JobLevel" class="form-select form-select-lg">
                                <option value="">Select...</option>
                                <option value="Entry Level">Entry Level</option>
                                <option value="Mid Level">Mid Level</option>
                                <option value="Senior Level">Senior Level</option>
                                <option value="Director">Director</option>
                                <option value="Executive">Executive</option>
                            </select>
                            <span asp-validation-for="JobLevel" class="text-danger fs-5 mt-2"></span>
                        </div>
                    </div>

                    <div class="apply-job-section my-5 p-5 bg-light rounded">
                        <h4 class="mb-4 fs-1 fw-bold">Apply Job on:</h4>
                        <div class="apply-methods ps-3">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="ApplyMethod" id="onJobpilot"
                                    value="Jobpilot" checked />
                                <label class="form-check-label fs-4" for="onJobpilot">
                                    <strong>On Jobpilot</strong>
                                    <p class="text-muted mt-2 fs-5">Candidate will apply job using jobpilot & all
                                        application
                                        will show on your dashboard.</p>
                                </label>
                            </div>
                            <div class="form-check mt-4">
                                <input class="form-check-input" type="radio" asp-for="ApplyMethod" id="externalPlatform"
                                    value="External" />
                                <label class="form-check-label fs-4" for="externalPlatform">
                                    <strong>External Platform</strong>
                                    <p class="text-muted mt-2 fs-5">Candidate apply job on your website, all application
                                        on
                                        your own website.</p>
                                </label>
                            </div>
                            <div class="form-check mt-4">
                                <input class="form-check-input" type="radio" asp-for="ApplyMethod" id="onEmail"
                                    value="Email" />
                                <label class="form-check-label fs-4" for="onEmail">
                                    <strong>On Your Email</strong>
                                    <p class="text-muted mt-2 fs-5">Candidate apply job on your email address, and all
                                        application in your email.</p>
                                </label>
                            </div>
                        </div>
                    </div>

                    <h4 class="mt-5 mb-4 fs-1 fw-bold">Description & Responsibility</h4>
                    <div class="mb-5">
                        <label asp-for="Description" class="form-label fw-medium fs-4">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="7"
                            placeholder="Add your job description..."></textarea>
                        <span asp-validation-for="Description" class="text-danger fs-5 mt-2"></span>
                    </div>

                    <div class="mb-5">
                        <label asp-for="Benefits" class="form-label fw-medium fs-4">Benefits</label>
                        <textarea asp-for="Benefits" class="form-control" rows="5"
                            placeholder="Add job benefits like health insurance, PTO, etc..."></textarea>
                        <span asp-validation-for="Benefits" class="text-danger fs-5 mt-2"></span>
                    </div>

                    <div class="mb-5">
                        <label asp-for="Responsibilities" class="form-label fw-medium fs-4">Responsibilities</label>
                        <textarea asp-for="Responsibilities" class="form-control" rows="7"
                            placeholder="Add your job responsibilities..."></textarea>
                        <span asp-validation-for="Responsibilities" class="text-danger fs-5 mt-2"></span>
                    </div>

                    <div class="mt-5 text-center">
                        <button type="submit" class="btn btn-primary btn-lg px-5 py-3 fs-4">
                            Post Job <i class="fas fa-arrow-right ms-2"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    /* Sidebar styles (same as in Index.cshtml) */
    .employers-dashboard {
        display: flex;
        gap: 30px;
    }

    /* Sidebar */
    .sidebar {
        width: 280px;
        flex-shrink: 0;
        font-size: 1.6rem;
    }

    .sidebar-header h5 {
        font-size: 14px;
        font-weight: 600;
        color: #777;
        margin-bottom: 20px;
    }

    .sidebar-menu {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .sidebar-menu li {
        margin-bottom: 15px;
    }

    .sidebar-menu li a {
        display: flex;
        align-items: center;
        color: #666;
        text-decoration: none;
        padding: 8px 15px;
        border-radius: 6px;
        transition: all 0.3s;
    }

    .sidebar-menu li a:hover,
    .sidebar-menu li.active a {
        background-color: rgba(0, 123, 255, 0.1);
        color: #0d6efd;
    }

    .sidebar-menu li.active a {
        font-weight: 500;
    }

    .sidebar-menu li a i {
        width: 20px;
        text-align: center;
        margin-right: 8px;
    }

    .sidebar-footer {
        padding-top: 15px;
        border-top: 1px solid #eee;
    }

    .sidebar-footer a {
        color: #666;
        text-decoration: none;
        font-size: 14px;
    }

    .sidebar-footer a:hover {
        color: #0d6efd;
    }

    /* Main Content */
    .main-content {
        flex: 1;
    }

    /* Form Styles */
    .post-job-container {
        margin-bottom: 40px;
    }

    .form-label {
        margin-bottom: 8px;
        color: #333;
    }

    .form-control,
    .form-select {
        padding: 10px 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .form-check-label {
        font-weight: normal;
        padding-left: 10px;
    }

    .form-check-label p {
        font-size: 14px;
        margin-bottom: 0;
    }

    .apply-job-section {
        border: 1px solid #eee;
    }

    .btn-primary {
        background-color: #0d6efd;
        border: none;
        padding: 10px 25px;
        font-weight: 500;
        transition: all 0.3s;
    }

    .btn-primary:hover {
        background-color: #0b5ed7;
    }

    /* Responsive */
    @@media(max - width: 992px) {
        .employers-dashboard {
            flex-direction: column;
        }

        .sidebar {
            width: 100%;
            margin-bottom: 30px;
        }
    }

    /* Tăng kích thước cho form controls */
    .form-control,
    .form-select {
        font-size: 1.2rem !important;
        padding: 0.75rem 1.2rem !important;
    }

    .form-control::placeholder {
        font-size: 1.1rem !important;
    }

    /* Cải thiện hiển thị cho textarea */
    textarea.form-control {
        min-height: 150px !important;
    }

    /* Style cho các thẻ label */
    .form-label {
        margin-bottom: 0.75rem !important;
        color: #333;
        font-size: 1.25rem !important;
    }

    /* Style cho tiêu đề */
    h2 {
        color: #333;
        font-weight: 700 !important;
        font-size: 2.5rem !important;
    }

    h4 {
        color: #333;
        font-weight: 600 !important;
        font-size: 1.8rem !important;
    }

    /* Style cho section apply job */
    .apply-job-section {
        background-color: #f8f9fa;
        border-radius: 10px;
        border: 1px solid #e9ecef;
        padding: 2rem !important;
    }

    /* Style cho button submit */
    .btn-primary {
        padding: 1rem 2.5rem !important;
        font-weight: 600 !important;
        font-size: 1.25rem !important;
    }

    /* Cải thiện form check */
    .form-check-label strong {
        font-size: 1.3rem !important;
        display: block;
        margin-bottom: 0.4rem !important;
    }

    .form-check-label p {
        font-size: 1.1rem !important;
    }

    /* Tăng kích thước cho các form controls */
    .input-group-text {
        font-size: 1.2rem !important;
        padding: 0.75rem 1.2rem !important;
    }

    /* Tăng kích thước checkbox/radio */
    .form-check-input {
        width: 1.3em !important;
        height: 1.3em !important;
        margin-top: 0.25em !important;
    }

    /* Thêm các style mới */
    .container-fluid {
        max-width: 1600px;
    }

    /* Thêm một số hiệu ứng hover */
    .form-control:hover,
    .form-select:hover {
        border-color: #0d6efd;
    }

    /* Cải thiện khoảng cách giữa các phần */
    .row {
        margin-bottom: 2rem;
    }

    /* Responsive styling */
    @@media (max-width: 768px) {
        .post-job-container {
            padding: 1.5rem !important;
        }

        h2 {
            font-size: 1.8rem !important;
        }

        h4 {
            font-size: 1.4rem !important;
        }

        .form-label {
            font-size: 1rem !important;
        }
    }
</style>

@section Scripts {
    <script src="~/js/employer-dashboard.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Thêm loading indicator nếu chưa có
            if (!document.getElementById('loading-indicator')) {
                const loadingIndicator = document.createElement('div');
                loadingIndicator.id = 'loading-indicator';
                loadingIndicator.className = 'text-center py-3';
                loadingIndicator.style.display = 'none';
                loadingIndicator.innerHTML = `
                                                                            <div class="spinner-border text-primary" role="status">
                                                                                <span class="visually-hidden">Loading...</span>
                                                                            </div>
                                                                        `;
                document.querySelector('main').appendChild(loadingIndicator);
            }

            // Thêm toast container nếu chưa có
            if (!document.getElementById('toast-container')) {
                const toastContainer = document.createElement('div');
                toastContainer.id = 'toast-container';
                toastContainer.className = 'toast-container position-fixed bottom-0 end-0 p-3';
                document.body.appendChild(toastContainer);
            }

            // Thêm id cho form nếu chưa có
            const form = document.querySelector('form');
            if (form && !form.id) {
                form.id = 'job-form';
            }
        });
    </script>
}