@model dynamic

<div class="row">
    <div class="col-12 mb-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title">Welcome, @Model.CompanyName</h4>
                <p class="card-text text-muted">Here's what's happening with your job postings.</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <div class="d-flex align-items-center justify-content-center mb-3">
                    <i class="fas fa-briefcase fa-2x text-primary"></i>
                </div>
                <h2 class="display-4 fw-bold">@Model.TotalJobs</h2>
                <p class="card-text">Total Jobs</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <div class="d-flex align-items-center justify-content-center mb-3">
                    <i class="fas fa-bullhorn fa-2x text-success"></i>
                </div>
                <h2 class="display-4 fw-bold">@Model.ActiveJobs</h2>
                <p class="card-text">Active Jobs</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <div class="d-flex align-items-center justify-content-center mb-3">
                    <i class="fas fa-users fa-2x text-info"></i>
                </div>
                <h2 class="display-4 fw-bold">@Model.TotalApplications</h2>
                <p class="card-text">Total Applications</p>
            </div>
        </div>
    </div>
</div> 