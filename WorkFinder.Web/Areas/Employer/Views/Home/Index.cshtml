@model WorkFinder.Web.Areas.Employer.Models.EmployerDashboardViewModel
@{
    ViewData["Title"] = "Employer Dashboard";
    Layout = "_EmployerLayout";
}

<div class="container">
    <div class="employers-dashboard mt-4">
        <div class="sidebar">
            <div class="sidebar-header mb-4">
                <h5>EMPLOYERS DASHBOARD</h5>
            </div>
            <ul class="sidebar-menu">
                <li class="active">
                    <a href="#" class="d-flex align-items-center">
                        <i class="fas fa-tachometer-alt me-2"></i>
                        <span>Overview</span>
                    </a>
                </li>
                <li>
                    <a href="#" class="d-flex align-items-center">
                        <i class="fas fa-building me-2"></i>
                        <span>Employers Profile</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Create", "Job", new { area = "Employer" })" class="d-flex align-items-center">
                        <i class="fas fa-plus-circle me-2"></i>
                        <span>Post a Job</span>
                    </a>
                </li>
                <li>
                    <a href="#" class="d-flex align-items-center">
                        <i class="fas fa-briefcase me-2"></i>
                        <span>My Jobs</span>
                    </a>
                </li>
                <li>
                    <a href="#" class="d-flex align-items-center">
                        <i class="fas fa-user me-2"></i>
                        <span>Saved Candidate</span>
                    </a>
                </li>
                <li>
                    <a href="#" class="d-flex align-items-center">
                        <i class="fas fa-credit-card me-2"></i>
                        <span>Plans & Billing</span>
                    </a>
                </li>
                <li>
                    <a href="#" class="d-flex align-items-center">
                        <i class="fas fa-building me-2"></i>
                        <span>All Companies</span>
                    </a>
                </li>
                <li>
                    <a href="#" class="d-flex align-items-center">
                        <i class="fas fa-cog me-2"></i>
                        <span>Settings</span>
                    </a>
                </li>
            </ul>
            <div class="sidebar-footer mt-4">
                <a href="@Url.Action("Logout", "Auth")" class="d-flex align-items-center">
                    <i class="fas fa-sign-out-alt me-2"></i> Log-out
                </a>
            </div>
        </div>

        <div class="main-content">
            <div id="dashboard-greeting" class="dashboard-greeting mb-4">
                <h3>Hello, @Model.CompanyName</h3>
                <p class="text-muted">Here is your daily activities and applications</p>
            </div>

            <div id="stats-section" class="stats-cards row mb-4">
                <!-- Đặt nội dung mặc định để hiển thị trong lúc chờ AJAX -->
                <div class="col-md-6">
                    <div class="stats-card">
                        <div class="stats-content">
                            <h2>0</h2>
                            <p>Open Jobs</p>
                        </div>
                        <div class="stats-icon">
                            <i class="fas fa-briefcase"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="stats-card">
                        <div class="stats-content">
                            <h2>0</h2>
                            <p>Saved Candidates</p>
                        </div>
                        <div class="stats-icon">
                            <i class="fas fa-user"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="recent-jobs-section">
                <div class="section-header d-flex justify-content-between align-items-center mb-3">
                    <h5>Recently Posted Jobs</h5>
                    <a href="@Url.Action("Index", "Job", new { area = "Employer" })" class="view-all">View all <i
                            class="fas fa-arrow-right"></i></a>
                </div>

                <div id="recent-jobs-section" class="jobs-table-container">
                    <!-- Đặt nội dung mặc định để hiển thị trong lúc chờ AJAX -->
                    <div class="p-4 text-center">
                        <p>Loading job data...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Dashboard Layout */
    .employers-dashboard {
        display: flex;
        gap: 30px;
    }

    /* Sidebar */
    .sidebar {
        width: 250px;
        flex-shrink: 0;
        font-size: 1.6rem;
    }

    .sidebar-header h5 {
        font-size: 14px;
        font-weight: 600;
        color: #777;
        margin-bottom: 20px;
    }

    .sidebar-menu {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .sidebar-menu li {
        margin-bottom: 15px;
    }

    .sidebar-menu li a {
        display: flex;
        align-items: center;
        color: #666;
        text-decoration: none;
        padding: 8px 15px;
        border-radius: 6px;
        transition: all 0.3s;
    }

    .sidebar-menu li a:hover,
    .sidebar-menu li.active a {
        background-color: rgba(0, 123, 255, 0.1);
        color: #0d6efd;
    }

    .sidebar-menu li.active a {
        font-weight: 500;
    }

    .sidebar-menu li a i {
        width: 20px;
        text-align: center;
        margin-right: 8px;
    }

    .sidebar-footer {
        padding-top: 15px;
        border-top: 1px solid #eee;
    }

    .sidebar-footer a {
        color: #666;
        text-decoration: none;
        font-size: 14px;
    }

    .sidebar-footer a:hover {
        color: #0d6efd;
    }

    /* Main Content */
    .main-content {
        flex: 1;
    }

    .dashboard-greeting h3 {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .dashboard-greeting p {
        font-size: 14px;
        color: #777;
    }

    /* Stats Cards */
    .stats-cards {
        margin-left: -10px;
        margin-right: -10px;
    }

    .stats-cards .col-md-6 {
        padding-left: 10px;
        padding-right: 10px;
    }

    .stats-card {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #fff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        height: 100%;
    }

    .stats-content h2 {
        font-size: 28px;
        font-weight: 700;
        margin-bottom: 5px;
    }

    .stats-content p {
        font-size: 14px;
        color: #777;
        margin: 0;
    }

    .stats-icon {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        background-color: rgba(0, 123, 255, 0.1);
    }

    .stats-icon i {
        font-size: 20px;
        color: #0d6efd;
    }

    /* Jobs Table */
    .section-header h5 {
        font-size: 18px;
        font-weight: 600;
        margin: 0;
    }

    .view-all {
        font-size: 14px;
        color: #0d6efd;
        text-decoration: none;
    }

    .view-all:hover {
        text-decoration: underline;
    }

    .jobs-table-container {
        background-color: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    }

    .jobs-table {
        margin-bottom: 0;
    }

    .jobs-table th {
        font-size: 12px;
        font-weight: 600;
        color: #777;
        text-transform: uppercase;
        padding: 15px 20px;
        border-bottom: 1px solid #eee;
    }

    .jobs-table td {
        padding: 15px 20px;
        vertical-align: middle;
        border-bottom: 1px solid #eee;
    }

    .job-info h6 {
        font-size: 16px;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .job-meta {
        font-size: 13px;
        color: #777;
    }

    .job-meta .separator {
        margin: 0 5px;
    }

    .job-type {
        color: #0d6efd;
    }

    .btn-view-applications {
        font-size: 13px;
        color: #666;
        background-color: #f8f9fa;
        border: 1px solid #eee;
        padding: 5px 15px;
        border-radius: 4px;
    }

    .btn-view-applications:hover {
        background-color: #e9ecef;
    }
</style>

@section Scripts {
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <script src="~/js/employer-dashboard.js"></script>
    <script>
        console.log("Dashboard page loaded");
    </script>
}