@model WorkFinder.Web.Areas.Employer.Models.EmployerDashboardViewModel
@{
    ViewData["Title"] = "Employer Dashboard";
    Layout = "_EmployerLayout";
}

<div class="container">
    <div class="employers-dashboard mt-4">
        <!-- Sidebar -->
        <div class="sidebar d-none d-md-block">
            <div class="sidebar-header mb-4">
                <h5>EMPLOYERS DASHBOARD</h5>
            </div>
            <ul class="sidebar-menu">
                <li class="active">
                    <a href="@Url.Action("Index", "Home", new { area = "Employer" })" class="d-flex align-items-center">
                        <i class="fas fa-tachometer-alt me-2"></i>
                        <span>Overview</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Profile", "Company", new { area = "Employer" })"
                        class="d-flex align-items-center">
                        <i class="fas fa-user me-2"></i>
                        <span>Profile</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Job", new { area = "Employer" })" class="d-flex align-items-center">
                        <i class="fas fa-briefcase me-2"></i>
                        <span>My Jobs</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Settings", "Account", new { area = "Employer" })"
                        class="d-flex align-items-center">
                        <i class="fas fa-cog me-2"></i>
                        <span>Settings</span>
                    </a>
                </li>
            </ul>
            <div class="sidebar-footer mt-4">
                <a href="@Url.Action("Logout", "Auth", new { area = "Auth" })" class="d-flex align-items-center">
                    <i class="fas fa-sign-out-alt me-2"></i> Log-out
                </a>
            </div>
        </div>

        <div class="main-content">
            <div class="row mb-4">
                <div class="col">
                    <h2 class="page-title mb-0">@ViewData["Title"]</h2>
                    <p class="text-muted">Welcome to your employer dashboard</p>
                </div>
            </div>

            <!-- Dashboard Stats Section -->
            <div class="row" id="stats-section">
                <div class="col-md-6">
                    <div class="stats-card">
                        <div class="stats-content">
                            <h2>@Model.OpenJobs</h2>
                            <p>Open Jobs</p>
                        </div>
                        <div class="stats-icon">
                            <i class="fas fa-briefcase"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="stats-card">
                        <div class="stats-content">
                            <h2>@Model.SavedCandidates</h2>
                            <p>Saved Candidates</p>
                        </div>
                        <div class="stats-icon">
                            <i class="fas fa-user"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Recent Jobs</h5>
                            <a href="@Url.Action("Index", "Job", new { area = "Employer" })"
                                class="btn btn-sm btn-outline-primary page-loader">
                                <i class="fas fa-list me-1"></i> All Jobs
                            </a>
                        </div>
                        <div class="card-body">
                            <div id="recent-jobs-section">
                                @if (Model.RecentJobs != null && Model.RecentJobs.Any())
                                {
                                    ViewBag.IsHomePage = true;
                                    @await Html.PartialAsync("_JobsListPartial", Model.RecentJobs.Select(rj => new
                                    WorkFinder.Web.Models.Job
                                                                {
                                        Id = rj.Id,
                                                                Title = rj.Title,
                                                                JobType = Enum.Parse<WorkFinder.Web.Models.Enums.JobType>(rj.JobType),
                                                                IsActive = rj.IsActive,
                                                                ExpiryDate = DateTime.Parse(rj.ExpirationDate),
                                                                Applications = rj.Applications
                                                                }).ToList())
                                                                }
                                else
                                {
                                    <div class="p-4 text-center">
                                        <p>You haven't posted any jobs yet.</p>
                                        <a href="@Url.Action("Create", "Job", new { area = "Employer" })"
                                            class="btn btn-primary mt-2">
                                            <i class="fas fa-plus-circle me-2"></i> Post a Job
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Dashboard Layout */
    .employers-dashboard {
        display: flex;
        gap: 30px;
        width: 100%;
        overflow-x: hidden;
    }

    /* Sidebar */
    .sidebar {
        width: 250px;
        flex-shrink: 0;
        font-size: 16px;
        overflow-x: hidden;
    }

    .sidebar-header h5 {
        font-size: 16px;
        font-weight: 600;
        color: #777;
        margin-bottom: 20px;
    }

    .sidebar-menu {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .sidebar-menu li {
        margin-bottom: 15px;
    }

    .sidebar-menu li a {
        display: flex;
        align-items: center;
        color: #666;
        text-decoration: none;
        padding: 10px 15px;
        border-radius: 6px;
        transition: all 0.3s;
        font-size: 15px;
    }

    .sidebar-menu li a:hover,
    .sidebar-menu li.active a {
        background-color: rgba(0, 123, 255, 0.1);
        color: #0d6efd;
    }

    .sidebar-menu li.active a {
        font-weight: 500;
    }

    .sidebar-menu li a i {
        width: 20px;
        text-align: center;
        margin-right: 8px;
    }

    .sidebar-footer {
        padding-top: 15px;
        border-top: 1px solid #eee;
    }

    .sidebar-footer a {
        color: #666;
        text-decoration: none;
        font-size: 14px;
    }

    .sidebar-footer a:hover {
        color: #0d6efd;
    }

    /* Main Content */
    .main-content {
        flex: 1;
        min-width: 0;
        overflow-x: hidden;
    }

    .dashboard-greeting h3 {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .dashboard-greeting p {
        font-size: 14px;
        color: #777;
    }

    /* Stats Cards */
    .stats-cards {
        margin-left: -10px;
        margin-right: -10px;
    }

    .stats-cards .col-md-6 {
        padding-left: 10px;
        padding-right: 10px;
    }

    .stats-card {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #fff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        height: 100%;
        margin-bottom: 1rem;
    }

    .stats-content h2 {
        font-size: 28px;
        font-weight: 700;
        margin-bottom: 5px;
    }

    .stats-content p {
        font-size: 14px;
        color: #777;
        margin: 0;
    }

    .stats-icon {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        background-color: rgba(0, 123, 255, 0.1);
    }

    .stats-icon i {
        font-size: 20px;
        color: #0d6efd;
    }

    /* Jobs Table */
    .section-header h5 {
        font-size: 18px;
        font-weight: 600;
        margin: 0;
    }

    .view-all {
        font-size: 14px;
        color: #0d6efd;
        text-decoration: none;
    }

    .view-all:hover {
        text-decoration: underline;
    }

    .jobs-table-container {
        background-color: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    }

    .jobs-table {
        margin-bottom: 0;
    }

    .jobs-table th {
        font-size: 12px;
        font-weight: 600;
        color: #777;
        text-transform: uppercase;
        padding: 15px 20px;
        border-bottom: 1px solid #eee;
    }

    .jobs-table td {
        padding: 15px 20px;
        vertical-align: middle;
        border-bottom: 1px solid #eee;
    }

    .job-info h6 {
        font-size: 16px;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .job-meta {
        font-size: 13px;
        color: #777;
    }

    .job-meta .separator {
        margin: 0 5px;
    }

    .job-type {
        color: #0d6efd;
    }

    .btn-view-applications {
        font-size: 13px;
        color: #666;
        background-color: #f8f9fa;
        border: 1px solid #eee;
        padding: 5px 15px;
        border-radius: 4px;
    }

    .btn-view-applications:hover {
        background-color: #e9ecef;
    }

    /* Card styles */
    .card {
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        border: none;
        margin-bottom: 1.5rem;
    }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        padding: 15px 20px;
    }

    .card-body {
        padding: 20px;
    }

    /* Responsive styles */
    @@media(max-width: 1199px) {
        .stats-content h2 {
            font-size: 24px;
        }
    }

    @@media(max-width: 991px) {
        .sidebar {
            font-size: 1.2rem;
        }

        .stats-card {
            padding: 15px;
        }

        .stats-icon {
            width: 45px;
            height: 45px;
        }

        .stats-icon i {
            font-size: 18px;
        }
    }

    @@media(max-width: 767px) {
        .employers-dashboard {
            flex-direction: column;
            overflow-x: hidden;
        }

        .sidebar {
            width: 100%;
            margin-bottom: 20px;
            overflow-x: hidden;
        }

        .stats-card {
            margin-bottom: 15px;
        }

        .jobs-table th,
        .jobs-table td {
            padding: 10px 15px;
        }
    }

    @@media(max-width: 575px) {
        .page-title {
            font-size: 24px;
        }

        .stats-content h2 {
            font-size: 20px;
        }

        .stats-content p {
            font-size: 12px;
        }

        .stats-icon {
            width: 40px;
            height: 40px;
        }

        .stats-icon i {
            font-size: 16px;
        }

        .card-header {
            padding: 12px 15px;
        }

        .card-body {
            padding: 15px;
        }
    }
</style>