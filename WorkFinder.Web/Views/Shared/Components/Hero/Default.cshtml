<link rel="stylesheet" href="~/css/hero.css">
<section class="hero">
    <div class="container">
        <div class="row d-flex align-items-center">
            <div class="col-lg-6 col-md-7">
                <h1 class="hero-title">
                    Find a job that suits <br />
                    your interest & skills.
                </h1>
                <p class="hero-subtitle">
                    A higher level of job search service that helps you find the right job at the right
                    company for the right salary.
                </p>
                <form id="heroSearchForm" action="@Url.Action("Index", "Job")" method="get" class="search-bar">
                    <div class="search-container shadow-sm">
                        <!-- Ô tìm kiếm từ khóa -->
                        <div class="search-input-group">
                            <span class="search-icon">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </span>
                            <input type="text" name="keyword" class="search-input"
                                placeholder="Job title, keywords..." />
                        </div>

                        <!-- Phân cách -->
                        <span class="search-divider d-none d-md-block">|</span>

                        <!-- Ô tìm kiếm địa điểm -->
                        <div class="search-input-group">
                            <span class="search-icon">
                                <i class="fa-solid fa-location-dot"></i>
                            </span>
                            <input type="text" name="location" class="search-input" placeholder="Location" />
                        </div>

                        <!-- Nút tìm kiếm -->
                        <button type="submit" class="btn btn-primary search-button">
                            <span class="d-none d-md-inline">Search</span>
                            <i class="fas fa-search d-inline d-md-none"></i>
                        </button>
                    </div>
                    <div class="search-suggestions mt-2">
                        Suggestions: <a href="@Url.Action("Index", "Job", new { keyword = "Designer" })">Designer</a>,
                        <a href="@Url.Action("Index", "Job", new { keyword = "Developer" })">Developer</a>,
                        <a href="@Url.Action("Index", "Job", new { keyword = "Web Design" })">Web Design</a>
                    </div>
                </form>
            </div>
            <div class="col-lg-5 col-md-5 offset-lg-1 d-none d-md-block">
                <img src="~/img/Illustration.png" alt="hero" class="hero-img img-fluid">
            </div>
        </div>

        <div class="row mt-5 stats-row">
            <div class="col-lg-3 col-md-6 col-sm-6 mb-4 mb-lg-0">
                <div class="stats-card">
                    <div class="stats-card-content">
                        <div class="stats-icon">
                            <img src="~/icon/briefcase-duotone 1.png" alt="icon">
                        </div>
                        <div class="stats-info">
                            <h3>1,76,324</h3>
                            <span>Jobs</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 mb-4 mb-lg-0">
                <div class="stats-card">
                    <div class="stats-card-content">
                        <div class="stats-icon">
                            <img src="~/icon/briefcase-duotone 1.png" alt="icon">
                        </div>
                        <div class="stats-info">
                            <h3>97,354</h3>
                            <span>New jobs</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 mb-4 mb-lg-0">
                <div class="stats-card">
                    <div class="stats-card-content">
                        <div class="stats-icon">
                            <img src="~/icon/buildings-duotone 1.png" alt="icon">
                        </div>
                        <div class="stats-info">
                            <h3>56,47754</h3>
                            <span>Companies</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 mb-4 mb-lg-0">
                <div class="stats-card">
                    <div class="stats-card-content">
                        <div class="stats-icon">
                            <img src="~/icon/users-duotone 1.png" alt="icon">
                        </div>
                        <div class="stats-info">
                            <h3>7,532</h3>
                            <span>Candidates</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>