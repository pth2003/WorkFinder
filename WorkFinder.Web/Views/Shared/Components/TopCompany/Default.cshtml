@model IEnumerable<WorkFinder.Web.Models.Company>

<link rel="stylesheet" href="~/css/top-company.css">

<section class="top-company-section">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="section-title">Top companies</h2>
            <a href="@Url.Action("Index", "Company")" class="view-more-link">View All <i
                    class="fas fa-arrow-right"></i></a>
        </div>

        <div class="row g-4">
            @foreach (var company in Model)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="company-card">
                        <div class="card-header">
                            <img src="@company.Logo" alt="@company.Name" class="company-logo">
                        </div>
                        <div class="card-body">
                            <h3 class="company-name">@company.Name</h3>
                            <p class="company-location"><i class="fas fa-map-marker-alt"></i> @(company.Location == "Unknown" ? "Remote" : company.Location)</p>
                            <a href="@Url.Action("Details", "Company", new { id = company.Id })" class="open-position-btn">Open Positions</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>