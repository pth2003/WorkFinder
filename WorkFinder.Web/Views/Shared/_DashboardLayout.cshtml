<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WorkFinder</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/dashboard-sidebar.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        html,
        body {
            height: 100%;
            overflow: hidden;
        }

        body {
            display: flex;
            flex-direction: column;
            margin: 0;
            padding: 0;
            min-height: 100vh;
        }

        .header {
            z-index: 1000;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background-color: white;
            border-bottom: 1px solid #e9ecef;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }

        .content-wrapper {
            flex: 1;
            margin-top: 90px;
            margin-bottom: 65px;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        .dashboard-row {
            display: flex;
            flex: 1;
            height: calc(100vh - 155px);
        }

        .main-content {
            flex: 1;
            padding: 30px 20px;
            background-color: white;
            font-size: 16px;
            overflow-y: auto;
            scrollbar-width: none;
            -ms-overflow-style: none;
        }

        .main-content::-webkit-scrollbar {
            display: none;
        }

        .footer {
            padding: 15px 0;
            background-color: #f8f9fa;
            border-top: 1px solid #e9ecef;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1000;
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
        }

        .footer p {
            margin: 0;
            color: #6c757d;
            font-size: 14px;
        }

        .sidebar {
            width: 250px;
            flex-shrink: 0;
            overflow-y: auto;
            height: 100%;
            scrollbar-width: none;
            -ms-overflow-style: none;
        }

        .sidebar::-webkit-scrollbar {
            display: none;
        }

        @@media (max-width: 767.98px) {
            .dashboard-row {
                flex-direction: column;
                height: calc(100vh - 155px);
                overflow-y: auto;
                scrollbar-width: none;
                -ms-overflow-style: none;
            }

            .dashboard-row::-webkit-scrollbar {
                display: none;
            }

            .sidebar {
                width: 100%;
                margin-bottom: 15px;
                height: auto;
                max-height: 300px;
            }

            .main-content {
                width: 100%;
                height: auto;
                flex: 1;
            }
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <header class="header">
        <partial name="~/Views/Shared/Partials/Common/_Header.cshtml" />
    </header>

    <div class="content-wrapper">
        <div class="container">
            <div class="dashboard-row">
                <partial name="Partials/Dashboard/_Sidebar" />

                <main class="main-content">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - WorkFinder - All rights reserved</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>