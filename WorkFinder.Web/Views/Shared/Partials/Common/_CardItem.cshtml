@model WorkFinder.Web.Models.ViewModels.CategoryCardViewModel

<div class="card">
    <div class="card-content">
        <div class="card-body">
            <div class="media d-flex">
                <div class="align-self-center icon-item">
                    <i class="@Model.Icon"></i>
                </div>
                <div class="media-body text-right">
                    <h5>@Model.Category.Name</h5>
                    <span>@Model.Category.Jobs.Count Open position</span>
                </div>
            </div>
        </div>
    </div>
</div>

